@{
    ViewData["Title"] = "Analysis Results";
    var analysisResult = Model as List<(string Tag, double Confidence)>;
}

<h2>Analysis Results</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tag</th>
            <th>Confidence (%)</th>
        </tr>
    </thead>
    <tbody>
        @if (analysisResult != null && analysisResult.Count > 0)
        {
            foreach (var result in analysisResult)
            {
                <tr>
                    <td>@result.Tag</td>
                    <td>@($"{(result.Confidence * 100):F2}%")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">No data available.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Home/AnalyzeImage" class="btn btn-secondary"><--Back</a>
</div>
